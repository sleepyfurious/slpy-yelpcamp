<% include partials_header %>

<div class="container">
<div class="row justify-content-around">
<div class="col-sm-12 col-md-10 col-lg-8">
<div class="card form-panel">
    <h1 class="card-header">
        <%= isNewOrNotEdit? "Create a New Campground"
                            : `Edit "${campground.name}"`; %>
    </h1>
        
    <div class="card-body">
        <% if (isNewOrNotEdit) { %>
        <form action="/campgrounds" method="POST">
        <% } else { %>
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <% } %>
            
            <div class="form-group">
                <label for="name">Campground's name</label>
                <input type="text" id="name" class="form-control"
                       name="campground[name]"  placeholder="name"
                       value="<%= isNewOrNotEdit? '': campground.name; %>"
                       >
            </div>
            
            <div class="form-group">
                <label for="image_url">Image URL</label>
                <input type="text" id="image_url" class="form-control"
                       name="campground[image]" placeholder="image url"
                       value="<%= isNewOrNotEdit? '': campground.image; %>"
                       >
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <input type="text" id="description" class="form-control"
                       name="campground[description]" placeholder="description"
                       value="<%= isNewOrNotEdit? '': campground.description; %>"
                       >
            </div>

            <button class="btn btn-block branding">Submit</button>
            
        </form>
        <hr>
        <a href="javascript:history.back()" 
           class="btn btn-outline-secondary btn-block"
           >Go Back</a>
    </div>
</div>
</div>
</div>
</div>

<% include partials_footer %>